	cInfos += '  <tr> ' + CRLF
	cInfos += '	 <td colspan="4"><b>DEPARTAMENTO</b><br><b>' + SRA->RA_CC + ":</b> " + alltrim(CTT->CTT_DESC01) +'</td> ' + CRLF
	cInfos += '  </tr> ' + CRLF
	cInfos += '  <br /> ' + CRLF

	cInfos += '  <tr> ' + CRLF
	cInfos += '	 <td colspan="4"><b>CARGO</b><br><b>' + SRA->RA_CODFUNC + ":</b> " + alltrim(SRJ->RJ_DESC) +'</td> ' + CRLF
