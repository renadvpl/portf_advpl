	cInfos := '  <tr> ' + CRLF
	cInfos += '	 <td colspan="4"><b>FUNCIONÁRIO</b><br><b>' + SRA->RA_MAT + ":</b> " + alltrim(SRA->RA_NOMECMP) +'</td> ' + CRLF
